{
  "name": "Wordly",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Discover a wealth of words with wordly.",
  "homepage_url": "http://tba.com",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png"
    },
    "default_title": "Wordly",
    "default_popup": "src/browser_action/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"
                 ,"https://*/*"],
      "js": ["js/jquery/jquery.js"
            ,"js/jquery-highlight.js"
            ,"js/underscore.js"
            ,"js/angular/angular.js"
            ,"src/inject/popupContent.js"
            ,"src/inject/app.js"
            ,"src/inject/inject.js"
            ],
      "css": [//"css/reset.css",
             "css/inject.css"]
    }
  ],
  "web_accessible_resources": ["fonts/Roboto/Roboto-Light.ttf", "src/inject/testinject.html"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}